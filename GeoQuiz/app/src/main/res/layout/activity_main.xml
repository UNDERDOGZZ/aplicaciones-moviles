<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".MainActivity">


    <TextView
            android:text="@string/question_lima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvQuestion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    />
    <Button
            android:text="@string/btn_true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnTrue"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/tvQuestion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btnFalse"/>
    <Button
            android:text="@string/btn_false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnFalse"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/tvQuestion"
            app:layout_constraintStart_toEndOf="@+id/btnTrue"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="@string/option_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_back" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/btnTrue" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/btn_next"/>
    <Button
            android:text="@string/option_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_next" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/btnFalse" app:layout_constraintStart_toEndOf="@+id/btn_back"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>